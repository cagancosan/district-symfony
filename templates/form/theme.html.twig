{% block form_row %}
	{%- set row_attr = row_attr|merge({ class: row_attr.class|default(row_class|default('flex flex-col')) }) -%}
	<div {% with {attr: row_attr} %} {{ block('attributes') }} {% endwith %}>
		{{ form_label(form) }}
		{{ form_widget(form) }}
		{% if form.vars['errors']|length > 0 %}
			{% for error in form.vars['errors'] %}
				<span class="bg-red-500 text-dark">{{ error.message }}</span>
			{% endfor %}
		{% endif %}
	</div>
{% endblock %}

{% block submit_row %}
	{%- set row_attr = row_attr|merge({ class: row_attr.class|default(row_class|default('flex items-center justify-center')) }) -%}
	<div {% with {attr: row_attr} %} {{ block('attributes') }} {% endwith %}>
		{{ form_widget(form, {'attr': {'class': 'w-full themedButton'}}) }}
	</div>
{% endblock %}
